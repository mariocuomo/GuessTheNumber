<Page
    x:Class="Guess_The_Number.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Guess_The_Number"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="DodgerBlue">
            <Image Source="Mario.png" Height="Auto" Margin="0,10,0,5"></Image>
        </Grid>
        <Grid Grid.Row="1" Background="Orange">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="60" Height="*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <HyperlinkButton  Grid.Column="1" NavigateUri="https://mariocuomo.azurewebsites.net" Content="mariocuomo.azurewebsites.net" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30"/>
            <ScrollViewer  VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,50" VerticalAlignment="Stretch" >
                <TextBlock Padding="0,0,40,0" TextAlignment="Center" FontSize="30" TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Center" Text="I'm a student of computer engineering at Roma Tre University, in Rome. Born in 1997, I grew up during the computer and informatic boom. Always passionate, now I'm trying to improve my knowledge every day more about this immense world. The road will surely rise, but the important thing is never to give up. My motto (enough galilean) is OBSERVE, SUPPOSE and CREATE."></TextBlock>
            </ScrollViewer>
            <Button x:ConnectionId='2' Content="BACK" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" FontSize="30" Margin="0,0,24,10"                      Width="Auto"></Button>

        </Grid>

    </Grid>

</Page>

